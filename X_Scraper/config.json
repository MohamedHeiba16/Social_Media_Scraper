{
    "scrapeSettings": {
        "headlessMode": false,
        "browser": "chrome",
        "timeOut": 30,
        "scrollDelay": {
            "min": 3,
            "max": 7
        },
        "actionDelay": {
            "min": 2,
            "max": 4
        }
    },
    "socialMediaPlatforms": {
        "X": {
            "accounts": [
                "BillGates",
                "elonmusk",
                "NASA",
                "MKBHD",
                "verge"
            ]
        },
        "Instagram": {
            "accounts": [
                "natgeo",
                "instagram"
            ],
            "postsPerProfile": 20,
            "scrapeComments": true,
            "maxCommentsPerPost": 50,
            "scrapeType": "recent"
        },
        "TikTok": {
            "accounts": []
        },
        "Facebook": {
            "accounts": []
        }
    },
    "credentials": {
        "X": {
            "username": "ENTER_YOUR_USERNAME",
