        },
        "Instagram": {
            "username": "...",
            "password": "...",
            "recoveryEmail": "ENTER_RECOVERY_EMAIL"
        }
    },
    "logging": {
        "level": "DEBUG",
        "logToFile": true,
        "logFilePath": "scraper_logs.log",
        "rotateLogsDaily": true,
        "maxLogFiles": 7
    },
    "output": {
        "format": "json",
        "directory": "scraped_data",
        "filenamePrefix": "instagram_scrape",
        "includeTimestamp": true
    },
    "errorHandling": {
        "maxRetries": 3,
        "retryDelay": 5,
        "skipFailedProfiles": true
    },
    "proxy": {
        "enabled": false,
